<table border="1">
    <tr>
        <th colspan="5">STUDENT LIST</th>
        <th><button><a href="/student/drop">DELETE ALL</a></button></th>
    </tr>
    <tr>
        <th>Student Name</th>
        <th>Student DoB</th>
        <th>Student Gender</th>
        <th>Student GPA</th>
        <th>Student Avatar</th>
        <th>DELETE</th>
    </tr>
    {{#each students }}
    <tr>
        <td>{{ name }}</td>
        <td>{{ dateFormat dob "DD/MM/YYYY" }}</td>
        <td>{{ gender }}</td>
        <td>{{ gpa }}</td>
        <td><img src="{{ avatar }}" width="100" height="100" alt=""></td>
        <td><button><a href="/student/delete/{{_id}}">DELETE</a></button></td>
    </tr>
    {{/each}}
</table>